<div class="container-fluid">
    <div class="row">
        <div class="col-12" style="text-align: center">
            <h1>Eat-Da-Burger</h1>
            <div class="col-12">
                <div class="text-center">
                    <img src="/assets/img/burger.png" class="rounded" style="height: 200px; width: 200px"
                        alt="burger picture" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div style="text-align: center">
        <div class="row">

            <!-- this column holds the burger names on the left -->
            <div class="col-7">
                <h3 style="text-align: center">
                    Burgers ready to be devoured!!!
                </h3>
                <ol>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured = true}}
                    {{/unless}}
                    {{/each}}
                </ol>
            </div>
            <!-- DEVOURED BURGERS ON THE RIGHT SIDE -->
            <div class="col-5">
                <h1 style="text-align: center">this is the devoured ones</h1>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div style="text-align: center">
                <form action="#">
                    <textarea type="text-area" id="burgerName" rows="8" cols="60" style="text-align: center">
Enter name of burger here</textarea>
                    <br />
                    <input type="submit" value="Submit" />
                </form>
            </div>
            <p style="text-align: center">
                Press submit, to create the new burger!
            </p>
        </div>
    </div>
</div>